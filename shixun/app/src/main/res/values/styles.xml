<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#40e0d0</item>
        <item name="colorPrimaryDark">#40e0d0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="List" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="NoDimAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="InputBoxStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <!--<item name="android:layout_marginLeft">18dp</item>-->
        <!--<item name="android:layout_marginRight">18dp</item>-->
        <item name="android:background">@drawable/border_input</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
